- content_for(:page, 'apps')
- content_for(:subpage, 'stock management')

- content_for(:title, 'Apps | Stocky')

%section#content
  = render 'layouts/partials/search'

  = column_chart @chart_data

  .page
    = render 'admin/apps/stocky/partials/stocknav'

    .row
      .col-lg-12
        %section.panel.panel-default.table-dynamic
          .panel-heading
            Voorraad
          .table-responsive
            %table.table.table-bordered.table-striped.table-linked
              %thead
                %tr
                  %th
                    .th
                      = I18n.t 'admin.stocky.product'
                  %th
                    .th
                      = I18n.t 'admin.stocky.stock.storage'
                  %th
                    .th
                      = I18n.t 'admin.stocky.stock.chamber'
              - @products.each do |product|
                %tr
                  %td
                    = product.name
                  %td
                    = product.storage_stock
                  %td
                    = product.chamber_stock
          %footer.table-footer
            .row
              .col-md-12.text-right
                = will_paginate @products
    .row
      .col-lg-12
        = render 'admin/apps/stocky/partials/new_move',
        url: '/apps/stocky/create', method: :post

    .row
      .col-lg-12
        %section.panel.panel-default.table-dynamic
          .panel-heading
            = I18n.t 'admin.stocky.stock.moves'
          .table-responsive
            %table.table.table-bordered.table-striped.table-linked
              %thead
                %tr
                  %th
                    .th
                      = I18n.t 'admin.stocky.product'
                  %th
                    .th
                      = I18n.t 'admin.stocky.from'
                  %th
                    .th
                      = I18n.t 'admin.stocky.to'
                  %th
                    .th
                      = I18n.t 'admin.stocky.amount'
                  %th
                    .th
                      = I18n.t 'admin.stocky.date'
              - @moves.each do |transaction|
                %tr
                  %td
                    = transaction.checkout_product_type.name
                  %td
                    = transaction.from
                  %td
                    = transaction.to
                  %td
                    = transaction.amount
                  %td
                    = transaction.created_at
          %footer.table-footer
            .row
              .col-md-12.text-right
                = will_paginate @moves
