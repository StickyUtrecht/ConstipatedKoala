- content_for(:page, 'members')
- content_for(:title, "Constipated koala | leden | #{@member.first_name} #{@member.infix} #{@member.last_name}")

%section#content
  .page
    .row
      %div
        .col-md-7{ :style => 'z-index: 1' }
          .panel.panel-default
            .panel-heading
              %span.glyphicon.glyphicon-th
              Algemene gegevens
            .panel-body
              %p #{@member.first_name} #{@member.infix} #{@member.last_name} (#{@member.gender})
              %p 
                #{@member.address} #{@member.house_number} 
                %br
                #{@member.postal_code} #{@member.city}
              %p 
                #{@member.phone_number}
                %br
                #{@member.email}
              %p= @member.comments  
          - if admin_signed_in? && current_admin.member.id == @member.id
            .panel.panel-default
              .panel-heading
                %span.glyphicon.glyphicon-th
                Admin gegevens 
              .panel-body
                %p= current_admin.member
        .col-md-5
          .panel.panel-default
            .panel-heading
              %span.glyphicon.glyphicon-th
              Studie gegevens
            .panel-body
              %p= @member.student_id
              Studie
          .panel.panel-default
            .panel-heading
              %span.glyphicon.glyphicon-th
              Sticky
            .panel-body
              %p= @member.join_date
              commissies 
              = @member.gravatar
          .panel.panel-default
            .panel-body
              = link_to 'Back', members_path, { :class => 'button btn btn-default' }
              = link_to 'Edit', edit_member_path(@member.id), { :class => 'button btn btn-warning' }
