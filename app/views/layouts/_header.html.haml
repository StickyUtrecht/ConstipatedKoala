%section#header.top-header
  %header.clearfix
    = link_to '#', :class => 'toggle-min visible-xs visible-small' do
      %i.fa.fa-bars
    .logo
      = link_to root_path do
        - if content_for?(:title)
          %span.hidden-xs
            = t :association_name
            |
          %span{style: 'text-overflow: ellipsis;'}
            = yield(:title)
        - else
          %span
            = t :association_name
    .top-nav
      .email.hidden-xs
        %span= current_user.email

      .hidden-xs
        = link_to destroy_user_session_path, 'data-method' => :delete do
          %i.fa.fa-sign-out
