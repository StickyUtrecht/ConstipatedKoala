.page.search
  %section.panel.panel-default
    .panel-body
      = form_tag members_path, :method => 'get' do
        .input-group
          = search_field_tag :search, params[:search], :autofocus => true,  placeholder: 'zoek lid op voornaam, achternaam, of studentnummer', class: 'form-control', :autocomplete => 'off'
          %span.input-group-btn
            %abbr{ :title => 'alle leden' }
              %label.ui-checkbox.btn.btn-primary
                %input{ :type => 'checkbox', :name => 'all', :checked => @all || false }
            %button.btn.btn-primary.fa.fa-search{ type: 'submit', style: 'padding: 7px 20px; height: 34px;' }