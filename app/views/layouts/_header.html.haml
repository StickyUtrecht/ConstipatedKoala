%section#header.top-header
  %header.clearfix
    = link_to '#', :class => 'toggle-min visible-xs visible-small menu-button' do
      .icon-bar
      .icon-bar
      .icon-bar
    = link_to root_path, :class => 'logo' do
      - if content_for?(:title)
        %span.hidden-xs
          = t :association_name
          |
        %span
          = yield(:title)
      - else
        %span
          = t :association_name
    .top-nav
      .email.hidden-xs
        %span= current_user.email

      .hidden-xs
        = link_to destroy_user_session_path, 'data-method' => :delete do
          %i.fa.fa-sign-out
