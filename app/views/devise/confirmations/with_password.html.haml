.row
  = form_for :user, url: new_member_confirm_path, method: :post, :html => { :class => 'form-horizontal'} do |f|

    - if @user.errors.any?
      - @user.errors.full_messages.each do |message|
        .alert.alert-danger
          %button.close{ type: "button" } Ã—
          %span
            = message

    - if flash[:alert]
      .alert.alert-danger
        %span
          = flash[:alert]

    - if flash[:notice]
      .alert.alert-info
        %span
          = flash[:notice]

    %fieldset
      %h4
        VERANDER MIJ
        = I18n.t :new, scope: 'devise.confirmations'

      .form-group
        .input-group
          %span.input-group-addon
            %i.fa.fa-envelope-o
          %label.form-control.form-control-disabled
            = @user.email

      .form-group
        .input-group
          %span.input-group-addon
            %i.fa.fa-lock
          = f.password_field :password, autocomplete: 'off', placeholder: 'wachtwoord', :class => 'form-control'

      .form-group
        .input-group
          %span.input-group-addon
            %i.fa.fa-lock
          = f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'wachtwoord herhalen', :class => 'form-control'
      .form-group
        = f.hidden_field :confirmation_token, value: params[:confirmation_token]
        = f.submit 'Account activeren', :class => 'btn btn-primary btn-block'
        -# i18n todo

.row
  .text-center
    = link_to (I18n.t'devise.registrations.passwordrecovery'), new_user_password_path
    |
    = link_to (I18n.t'devise.registrations.login'), new_user_session_path
